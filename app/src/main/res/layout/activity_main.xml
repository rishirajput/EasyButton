<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.rishirajput.easybutton.EasyButton
        android:id="@+id/easyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/easy_button"
        android:textColor="@android:color/white"
        app:backgroundShape="rectangle"
        app:backgroundType="gradient"
        app:cornerRadius="40dp"
        app:defaultBackGroundColorBottom="@android:color/holo_red_dark"
        app:defaultBackGroundColorTop="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/easyButton3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/easyButton3"
        app:layout_constraintTop_toBottomOf="@+id/easyButton3"
        app:layout_constraintVertical_bias="0.202"
        app:pressedBackGroundColorBottom="@android:color/holo_red_light"
        app:pressedBackGroundColorTop="@android:color/holo_red_dark" />

    <com.rishirajput.easybutton.EasyButton
        android:id="@+id/easyButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:padding="20dp"
        android:text="@string/easy_button"
        android:textColor="@android:color/white"
        app:backgroundShape="rectangle"
        app:backgroundType="gradient"
        app:cornerRadius="8dp"
        app:defaultBackGroundColorBottom="@android:color/holo_blue_dark"
        app:defaultBackGroundColorTop="@android:color/holo_blue_light"
        app:layout_constraintBottom_toTopOf="@+id/easyButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:pressedBackGroundColorBottom="@android:color/holo_blue_light"
        app:pressedBackGroundColorTop="@android:color/holo_blue_dark" />

    <com.rishirajput.easybutton.EasyButton
        android:id="@+id/easyButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="@string/easy_button"
        android:textColor="@android:color/white"
        app:backgroundShape="circle"
        app:backgroundType="gradient"
        app:cornerRadius="8dp"
        app:defaultBackGroundColorBottom="@android:color/holo_green_dark"
        app:defaultBackGroundColorTop="@android:color/holo_green_light"
        app:layout_constraintBottom_toTopOf="@+id/easyButton"
        app:layout_constraintEnd_toEndOf="@+id/easyButton2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/easyButton2"
        app:layout_constraintTop_toBottomOf="@+id/easyButton2"
        app:layout_constraintVertical_bias="0.033"
        app:pressedBackGroundColorBottom="@android:color/holo_green_light"
        app:pressedBackGroundColorTop="@android:color/holo_green_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>